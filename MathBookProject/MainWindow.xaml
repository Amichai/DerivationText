<Window x:Class="MathBookProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:MathBookProject"
        xmlns:l="clr-namespace:MathBookProject.LineTypes"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Name="root" VerticalAlignment="Top" Grid.Row="0" VerticalScrollBarVisibility="Auto">
        </ScrollViewer>
        <Button Grid.Row="1" Width="100" HorizontalAlignment="Left" Click="Save_Click">Save</Button>
    </Grid>
</Window>
